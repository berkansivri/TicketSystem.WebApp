@using TicketSystem.WebApp.Models
@using TicketSystem.Entities
@model Ticket
<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">
            @Model.Title
        </h3>
    </div>
    <div class="col-md-12">
        <img class="img-responsive" src="@Model.Img"/>
    </div>
    @if (CurrentSession.user != null && CurrentSession.user.IsAuth == true)
    {
        <div class="col-md-12 text-right">
            <a href="/User/GetUserById/@Model.Owner.Id" ><span class="glyphicon glyphicon-user"></span> @Model.Owner.Name&nbsp;@Model.Owner.Surname<br /></a>
            <span class="glyphicon glyphicon-time"></span> @Model.ModifiedOn
        </div>
    }
    else
    {
        <div class="col-md-12 text-right">
            <span class="glyphicon glyphicon-user"></span> @Model.Owner.Name&nbsp;@Model.Owner.Surname<br />
            <span class="glyphicon glyphicon-time"></span> @Model.ModifiedOn
        </div>
    }
    
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p class="text-justify">
            @Model.Text
        </p>
    </div>
</div>