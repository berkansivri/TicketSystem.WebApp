@using TicketSystem.Entities
@model PcDetail

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">
            <span class="glyphicon glyphicon-hdd"></span> @Model.PcName
        </h3>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12 text-left">
        <span class="glyphicon glyphicon-map-marker"></span> IP Adress :  @Model.IP<br /><br />
        <span class="glyphicon glyphicon-credit-card"></span> MAC Adress :  @Model.MAC
        
    </div>
    <div class="col-md-12">
